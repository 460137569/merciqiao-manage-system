<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carloan.service.admin.msg.dao.MsgDao">



	<select id="queryObject" resultType="com.carloan.service.admin.msg.vo.MsgVO">
		select * from msg where id = #{value}
	</select>

	<select id="queryList" parameterType="com.carloan.service.admin.msg.entity.MsgEntity" resultType="com.carloan.service.admin.msg.vo.MsgVO">
		select * from msg where isdelte=0
		<if test="name != null and name != ''">and `name` like "%"#{name}"%"</if>
		<if test="city != null and city != ''">and `city` = #{city} </if>
		<if test="type != null and type != ''">and `type` = #{type} </if>
		<if test="age != null and age != ''">and `age` = #{age} </if>
		<if test="gender != null and gender != ''">and `gender` = #{gender}</if>
		<if test="qq != null and qq != ''">and `qq` = #{qq}</if>
		<if test="startdate != null ">AND createtime <![CDATA[>=]]> #{startdate}</if>
		<if test="enddate != null">AND createtime <![CDATA[<]]>#{enddate}</if>
    	order by id desc
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from msg 
	</select>
	 
	<insert id="save" parameterType="com.carloan.service.admin.msg.entity.MsgEntity" useGeneratedKeys="true" keyProperty="id">
		insert into msg
		(
			`name`, 
			`city`, 
			`type`, 
			`age`, 
			`gender`, 
			`qq`, 
			`createtime`, 
			`updatetime`,
			`isdelte`
		)
		values
		(
			#{name}, 
			#{city}, 
			#{type}, 
			#{age}, 
			#{gender}, 
			#{qq}, 
			CURRENT_TIMESTAMP,
			CURRENT_TIMESTAMP,
			0
		)
	</insert>
	 
	<update id="update" parameterType="com.carloan.service.admin.msg.entity.MsgEntity">
		update msg 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="city != null">`city` = #{city}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="age != null">`age` = #{age}, </if>
			<if test="gender != null">`gender` = #{gender}, </if>
			<if test="qq != null">`qq` = #{qq}, </if>
			`updatetime` = CURRENT_TIMESTAMP
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		update msg set isdelte=1 where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		update msg set isdelte=1 where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>