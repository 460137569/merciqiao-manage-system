<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carloan.service.admin.mayirecord.dao.MayirecordDao">



	<select id="queryObject" resultType="com.carloan.service.admin.mayirecord.vo.MayirecordVO">
		select * from mayirecord where id = #{value}
	</select>

	<select id="queryList" resultType="com.carloan.service.admin.mayirecord.vo.MayirecordVO">
		select * from mayirecord
    	order by id desc
		limit  #{first}, #{rows}
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from mayirecord 
	</select>
	 
	<insert id="save" parameterType="com.carloan.service.admin.mayirecord.entity.MayirecordEntity">
		insert into mayirecord
		(
			`id`, 
			`ip`, 
			`addid`, 
			`createtime`
		)
		values
		(
			#{id}, 
			#{ip}, 
			#{addid}, 
			#{createtime}
		)
	</insert>
	 
	<update id="update" parameterType="com.carloan.service.admin.mayirecord.entity.MayirecordEntity">
		update mayirecord 
		<set>
			<if test="ip != null">`ip` = #{ip}, </if>
			<if test="addid != null">`addid` = #{addid}, </if>
			<if test="createtime != null">`createtime` = #{createtime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from mayirecord where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from mayirecord where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>